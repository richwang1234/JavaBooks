<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
    <default-config> <!-- 默认配置 -->
        <!-- 数据库驱动 -->
        <property name="driverClass">com.mysql.cj.jdbc.Driver</property>

        <property name="jdbcUrl">jdbc:mysql://localhost:3306/book?useSSL=false&amp;serverTimezone=Asia/Shanghai&amp;characterEncoding=utf-8&amp;autoReconnect=true</property>
        <!-- 数据库用户名 -->
        <property name="user">root</property>
        <!-- 数据库密码 -->
        <property name="password">root</property>

        <!--如果连接池数据连接不够时，一次增长数  -->
        <property name="acquireIncrement">1000</property>
        <!--初始化连接数  -->
        <property name="initialPoolSize">10</property>
        <!--最大连接数  -->
        <property name="maxPoolSize">100</property>
        <!--连接的最大空闲时间  -->
        <property name="maxIdleTime">600</property>
        <!--最小连接数  -->
        <property name="minPoolSize">5</property>
    </default-config>
</c3p0-config>